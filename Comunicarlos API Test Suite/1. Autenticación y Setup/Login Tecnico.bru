meta {
  name: Login Tecnico
  type: http
  seq: 6
}

post {
  url: {{base_url}}/api/v1/auth/login
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "{{email_tecnico}}",
    "password": "{{password_comun}}"
  }
}

assert {
  res.status: eq 200
  res.body.token: isString
  res.body.usuario.email: eq {{email_tecnico}}
}

script:post-response {
  var jsonData = res.getBody();
  bru.setEnvVar("token_tecnico", jsonData.token);
  bru.setEnvVar("id_tecnico", jsonData.usuario.id);
}

settings {
  encodeUrl: true
}
