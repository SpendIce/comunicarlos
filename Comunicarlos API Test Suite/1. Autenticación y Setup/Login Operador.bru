meta {
  name: Login Operador
  type: http
  seq: 4
}

post {
  url: {{base_url}}/api/v1/auth/login
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "{{email_operador}}",
    "password": "{{password_comun}}"
  }
}

assert {
  res.status: eq 200
  res.body.token: isString
  res.body.usuario.email: eq {{email_operador}}
}

script:post-response {
  var jsonData = res.getBody();
  bru.setEnvVar("token_operador", jsonData.token);
}

settings {
  encodeUrl: true
}
