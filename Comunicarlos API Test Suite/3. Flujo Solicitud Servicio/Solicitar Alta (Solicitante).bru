meta {
  name: Solicitar Alta (Solicitante)
  type: http
  seq: 2
}

post {
  url: {{base_url}}/api/v1/servicios/solicitar-alta
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{token_solicitante}}
  Content-Type: application/json
}

body:json {
  {
    "tipo_servicio": "TELEVISION",
    "plan_deseado": "Pack HD Premium",
    "direccion_instalacion": "Calle Falsa 123",
    "comentarios": "Llamar antes de venir"
  }
}

assert {
  res.status: eq 201
}

tests {
  test("Solicitud de alta creada correctamente", function () {
        var jsonData = res.getBody();
        expect(jsonData.mensaje).to.eql("Solicitud de alta creada correctamente");
    });
}
