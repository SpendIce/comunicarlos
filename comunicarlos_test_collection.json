			"item": [
				{
					"name": "Registro Solicitante",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nombre\": \"Juan Perez\",\n  \"email\": \"juan.perez@gmail.com\",\n  \"password\": \"SecurePass123!\",\n  \"tipoUsuario\": \"SOLICITANTE\",\n  \"serviciosSuscritos\": [\n    {\n      \"tipo\": \"INTERNET_BANDA_ANCHA\",\n      \"numeroServicio\": \"INT-55501\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/registro",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "registro"]
						}
					}
				},
				{
					"name": "Login Solicitante",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"token_solicitante\", jsonData.token);",
									"pm.environment.set(\"id_solicitante\", jsonData.usuario.id);",
									"pm.test(\"Token received\", function () {",
									"    pm.expect(jsonData.token).to.not.be.undefined;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"juan.perez@gmail.com\",\n  \"password\": \"SecurePass123!\"\n}"
						},
