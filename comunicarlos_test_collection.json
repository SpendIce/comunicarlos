		{
			"name": "2. Flujo Incidente Completo",
			"item": [
				{
					"name": "Crear Incidente (Solicitante)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"id_incidente\", jsonData.id);",
									"pm.test(\"Estado es NUEVO\", function () {",
									"    pm.expect(jsonData.estado).to.eql(\"NUEVO\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token_solicitante}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"tipo\": \"INCIDENTE\",\n  \"titulo\": \"Internet muy lento\",\n  \"descripcion\": \"La velocidad de descarga es menor a 1MB desde esta mañana.\",\n  \"categoria\": \"SERVICIO_INACCESIBLE\",\n  \"nivelUrgencia\": \"IMPORTANTE\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/requerimientos",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "requerimientos"]
						}
					}
				},
				{
					"name": "Listar Tecnicos (Operador)",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token_operador}}" }
						],
						"url": {
							"raw": "{{base_url}}/api/v1/usuarios/tecnicos",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "usuarios", "tecnicos"]
						}
					}
				},
				{
					"name": "Asignar Tecnico (Operador)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Estado cambiado a ASIGNADO\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.estado).to.eql(\"ASIGNADO\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token_operador}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"tecnicoId\": {{id_tecnico}},\n  \"comentario\": \"Asignado a Roberto por disponibilidad.\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/requerimientos/{{id_incidente}}/asignar",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "requerimientos", "{{id_incidente}}", "asignar"]
						}
					}
				},
				{
					"name": "Agregar Comentario (Tecnico)",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token_tecnico}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"texto\": \"Revisando la conexión del nodo principal. Parece haber ruido en la línea.\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/requerimientos/{{id_incidente}}/comentarios",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "requerimientos", "{{id_incidente}}", "comentarios"]
						}
					}
				},
				{
					"name": "Resolver Incidente (Tecnico)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Estado cambiado a RESUELTO\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.estado).to.eql(\"RESUELTO\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "PATCH",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token_tecnico}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"comentarioResolucion\": \"Se reinició el puerto en la central. El cliente confirma que el servicio funciona correctamente.\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/requerimientos/{{id_incidente}}/resolver",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "requerimientos", "{{id_incidente}}", "resolver"]
						}
					}
				},
				{
					"name": "Ver Notificaciones (Supervisor)",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token_supervisor}}" }
						],
						"url": {
							"raw": "{{base_url}}/api/v1/notificaciones?leida=false",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "notificaciones"],
							"query": [
								{ "key": "leida", "value": "false" }
							]
						}
					}
				}
			]
		},
